-- util --

function pop_left(t)
	local value = t[1]
	
	deli(t, 1)
	
	return value
end

function is_empty(t)
	return #t == 0
end

function dump(o)
   if type(o) == 'table' then
      local s = '{ '
      for k,v in pairs(o) do
         if type(k) ~= 'number' then k = '"'..k..'"' end
         s = s .. '['..k..'] = ' .. dump(v) .. ','
      end
      return s .. '} '
   else
      return tostring(o)
   end
end

